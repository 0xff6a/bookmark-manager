<header>
	<div id='logo'>Bookmark Manager</div>
	<div id='user-links'>
		<a href='/links/new' id='add-link' class='button highlighted'>Add Link</a>
		<% if current_user %>
			<span id='welcome-message'>
				Welcome, <%= current_user.email %>
			</span>

			<form id='sign-out' method='post' action='/sessions'>
				<input type='hidden' name='_method' value='delete'>
				<input type='submit' value='Sign Out'>
			</form>
		<% else %>
			<a href='/users/new' id='sign-up' class='button'>Sign up</a>
			<a href='/sessions/new' id='sign-in' class='button'>Sign In</a>
		<% end %>	
	</div>
</header>