<div class='container'>
	<header class='container-header'>Tags</header>
	<p>
		<% @tags.each do |tag| %>
			<%= partial :tag, :locals => {:tag => tag} %>
		<% end %>
		<a class='title' href=<%="/" %>>All</a>
	</p>
</div>

<div class='container'>
	<header class='container-header'>Links</header>
	<ul>
		<% @links.each do |link| %>
			<%= partial :link, :locals => {:link => link} %>
		<% end %>
	</ul>
</div>

